                }
                
                if (relatedOptions) {
                    preview += relatedOptions + '\\n\\n';
                }
                
                if (promotions) {
                    preview += '*PROMOCIONES ACTIVAS:*\\n' + promotions + '\\n\\n';
                }
                
                if (footer) {
                    preview += '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ\\n' + footer;
                }
                
                document.getElementById('contentPreview').innerHTML = '<pre>' + preview + '</pre>';
            }
        });

        function showAlert(type, message) {
            const alertContainer = document.getElementById('alertContainer');
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-' + type + ' alert-dismissible fade show';
            alertDiv.innerHTML = 
                message +
                '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>';
            alertContainer.appendChild(alertDiv);

            // Auto-cerrar despu√©s de 5 segundos
            setTimeout(() => {
